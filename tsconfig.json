{
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "../config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
}